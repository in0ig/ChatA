<template>
  <div id="app" class="chatbi-app">
    <!-- 顶部导航栏 -->
    <nav class="navbar">
      <div class="logo">ChatBI</div>
      <div class="user-info">
        <span>欢迎，用户</span>
        <button class="settings-btn" @click="openSettings">设置</button>
      </div>
    </nav>

    <!-- 主内容区 -->
    <div class="main-content">
      <!-- 左边侧边栏 -->
      <div class="sidebar">
        <DataSourcePanel 
          :data-sources="dataSources" 
          :active-source="activeDataSource"
          @activate="activateDataSource"
          @upload="handleFileUpload"
        />
        
        <DataPreparation @action="handleAction" />
        
        <HistoryPanel 
          :history="historyQueries" 
          @load="loadQuery"
        />
        
        <SessionChat 
          :sessions="sessions" 
          :current-session="currentSession"
          @switch="switchSession"
          @new-session="createNewSession"
        />
      </div>

      <!-- 主工作区 -->
      <div class="workspace">
        <QueryInput 
          v-model="currentQuery" 
          @query="processQuery"
        />
        
        <div class="results">
          <!-- 无数据源状态 -->
          <div class="no-data-source" v-if="!activeDataSource">
            <p>请先上传并激活一个Excel数据源</p>
            <button class="btn-primary" @click="document.getElementById('file-upload').click()">上传Excel文件</button>
          </div>
          
          <!-- 成功结果 -->
          <div v-else-if="result" class="result-content">
            <!-- AI 解释 -->
            <div class="ai-response">
              <p>{{ aiExplanation }}</p>
            </div>
            
            <!-- 图表 -->
            <ChartRenderer 
              :chart-title="result.chartTitle" 
              :data="result.data" 
              :max-value="result.maxValue"
            />
            
            <!-- 数据表格 -->
            <DataTable 
              :headers="result.headers" 
              :rows="result.rows"
            />
          </div>
          
          <!-- 初始状态 -->
          <div v-else class="empty-state">
            <p>请输入您的问题，让 AI 助您分析数据</p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- 全局加载遮罩 -->
    <div v-if="uiStore.isLoading" class="global-loading-overlay">
      <div class="loading-spinner"></div>
      <p>{{ uiStore.loadingMessage }}</p>
    </div>
    
    <!-- 设置面板（懒加载） -->
    <SettingsDrawer 
      v-if="isSettingsOpen"
      :visible="isSettingsOpen"
      @close="closeSettings"
    />
    
    <!-- Prompt 管理模态框 -->
    <PromptManagementModal />
  </div>
</template>

<script>
import { ref, defineAsyncComponent } from 'vue'
import { useUIStore } from '@/store/modules/ui'
import QueryInput from '@/components/QueryInput.vue'
import ChartRenderer from '@/components/ChartRenderer.vue'
import DataTable from '@/components/DataTable.vue'
import HistoryPanel from '@/components/HistoryPanel.vue'
import DataSourcePanel from '@/components/DataSourcePanel.vue'
import DataPreparation from '@/components/DataPreparation.vue'
import SessionChat from '@/components/SessionChat.vue'

// 懒加载非关键组件
const SettingsDrawer = defineAsyncComponent(() => import('@/components/Settings.vue'))
const PromptManagementModal = defineAsyncComponent(() => import('@/components/Config/PromptManagementModal.vue'))

export default {
  name: 'App',
  components: {
    QueryInput,
    ChartRenderer,
    DataTable,
    HistoryPanel,
    DataSourcePanel,
    DataPreparation,
    SessionChat,
    SettingsDrawer,
    PromptManagementModal
  },
  setup() {
    const uiStore = useUIStore()
    const isSettingsOpen = ref(false)
    
    const openSettings = () => {
      isSettingsOpen.value = true
    }
    
    const closeSettings = () => {
      isSettingsOpen.value = false
    }
    
    return {
      uiStore,
      isSettingsOpen,
      openSettings,
      closeSettings
    }
  },
  data() {
    return {
      currentQuery: '',
      result: null,
      aiExplanation: '',
      historyQueries: [
        '上月销售额最高的产品是什么？',
        '各区域销售对比',
        '客户转化率趋势'
      ],
      dataSources: [],
      activeDataSource: null,
      sessions: [
        { id: 'sess_1', name: '新会话' },
        { id: 'sess_2', name: '会话1' }
      ],
      currentSession: null
    }
  },
  methods: {
    activateDataSource(source) {
      this.activeDataSource = source;
      this.result = null;
      this.aiExplanation = '';
    },
    handleFileUpload(file) {
      // TODO: 实现文件上传逻辑
    },
    async processQuery(query) {
      if (!query.trim()) return;
      if (!this.activeDataSource) {
        this.uiStore.showToast('请先上传并激活一个数据源', 'error');
        return;
      }
      
      this.uiStore.setLoading(true, '正在分析您的问题...');
      this.result = null;
      this.aiExplanation = '';
      
      try {
        const response = await fetch('/api/query', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ text: query })
        });
        
        if (!response.ok) {
          const errorData = await response.json();
          throw new Error(errorData.details || '查询处理失败');
        }
        
        const data = await response.json();
        this.result = data.result;
        this.aiExplanation = data.result.raw.length > 0 ? 
          `根据销售数据分析，${data.result.data[0].label} 是${data.result.chartTitle}中表现最佳的产品...` :
          '已成功解析您的查询并返回相关数据。';
        
        // 添加到历史记录
        if (!this.historyQueries.includes(query)) {
          this.historyQueries.unshift(query);
          if (this.historyQueries.length > 5) {
            this.historyQueries.pop();
          }
        }
      } catch (error) {
        this.uiStore.showToast(error.message, 'error');
      } finally {
        this.uiStore.setLoading(false);
      }
    },
    loadQuery(query) {
      this.currentQuery = query;
      this.processQuery(query);
    },
    handleAction(action) {
      // TODO: 处理数据准备操作
    },
    switchSession(session) {
      this.currentSession = session;
    },
    createNewSession() {
      const newSession = { id: `sess_${Date.now()}`, name: '新会话' };
      this.sessions.unshift(newSession);
      this.currentSession = newSession;
    }
  }
}
</script>

